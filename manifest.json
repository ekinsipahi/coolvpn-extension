{
  "manifest_version": 3,
  "name": "CoolVPN Proxy",
  "version": "1.0.0",
  "description": "One-click VPN & proxy switcher with Kill Switch, ad blocking, and zero-logs privacy.",
  "action": {
    "default_popup": "index.html",
    "default_title": "CoolVPN Proxy"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "proxy",
    "storage",
    "webRequest",
    "tabs",
    "webRequestAuthProvider",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequest",
    "privacy"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "incognito": "split"
}
